<UserControl x:Class="Application.Models.UserControls.ListUsers"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Application.Models.UserControls"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800">
	<Grid Background="White">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="7*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Label Grid.Column="0" Content="Users"/>
			<ComboBox Grid.Column="1"/>
			<ComboBox Grid.Column="2"/>
			<Button Content="Refresh" Grid.Column="3" Click="RefreshButton_Click"/>
			<Button Grid.Column="4"/>

		</Grid>

		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<Label Width="50" Content="Id"/>
			<Label Width="200" Content="First Name"/>
			<Label Width="200" Content="Username"/>
			<Label Width="50" Content="Role"/>
		</StackPanel>
		<ListView x:Name="UsersList" Grid.Row="2">
			<ListView.ItemTemplate>
				<DataTemplate DataType="User">
					<StackPanel Orientation="Horizontal">
						<Label Width="50" Content="{Binding Path=Id}"/>
						<Label Width="200" Content="{Binding Path=FirstName}"/>
						<Label Width="200" Content="{Binding Path=Username}"/>
						<Label Width="50" Content="{Binding Path=TextRole}"/>
						<Button Width="50" Content="More" Click="OpenMoreInfoButton_Click"/>
					</StackPanel>
				</DataTemplate>
			</ListView.ItemTemplate>


		</ListView>

		<Frame Grid.Row="3" NavigationUIVisibility="Hidden"/>
	</Grid>
</UserControl>
