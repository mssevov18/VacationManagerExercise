		<Popup x:Name="AccessUserPopup" MinWidth="200" MinHeight="400" DataContext="{Binding PublicUser}" IsOpen="False" Placement="Left">
			<Border Background="White" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="3*"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<TextBox x:Name="PopupFirstNameBox" IsEnabled="False" Text="{Binding Path=FirstName, Mode=OneWay}" Grid.Row="0" Grid.Column="0"/>
					<TextBox x:Name="PopupLastNameBox" IsEnabled="False"  Text="{Binding Path=LastName, Mode=OneWay}" Grid.Row="0" Grid.Column="1"/>

					<TextBox x:Name="PopupUsernameBox" IsEnabled="False"  Text="{Binding Path=Username, Mode=OneWay}" Grid.Row="1" Grid.Column="0"/>

					<TextBox x:Name="PopupRoleBox" IsEnabled="False"  Text="{Binding Path=TextRole, Mode=OneWay}" Grid.Row="2" Grid.Column="0"/>

					<Button x:Name="DeleteUserPopup" Visibility="Hidden" Content="Delete" Grid.Column="0" Grid.Row="4" Click="DeleteUserPopup_Click"/>
					<Button x:Name="AddUserPopup" Visibility="Hidden" Content="Add" Grid.Column="0" Grid.Row="4" Click="AddUserPopup_Click"/>
					<Button x:Name="CloseAccessUserPopup" Content="Close" Grid.Column="1" Grid.Row="4" Click="CloseAccessUserPopup_Click"/>
					<Button x:Name="EditUserPopup" Visibility="Hidden" Content="Update" Grid.Column="2" Grid.Row="4" Click="EditUserPopup_Click"/>
					<!--Add buttons (edit) + constructor + Empty popup for add func-->
				</Grid>
			</Border>
		</Popup>

		<Popup x:Name="EnterPasswordPopup" MinWidth="400" MinHeight="200" IsOpen="False" Placement="Left">
			<Border Background="White" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>

					<StackPanel Grid.Row="0" Orientation="Horizontal">
						<Label Content="Password"/>
						<PasswordBox x:Name="PopupPasswordBox" MinWidth="100"/>
					</StackPanel>
					<StackPanel Grid.Row="1" Orientation="Horizontal">
						<Label Content="Confirm"/>
						<PasswordBox x:Name="PopupPasswordConfirmBox" MinWidth="100"/>
					</StackPanel>
					<Button x:Name="SubmitPasswordsButton" Grid.Row="2" HorizontalAlignment="Center" Content="Submit" Click="SubmitPasswordsButton_Click"/>
				</Grid>
			</Border>
		</Popup>

		<Frame x:Name="FooterFrame" Grid.Row="3" NavigationUIVisibility="Hidden"/>
	</Grid>
</UserControl>
